{% extends 'base.html.twig' %}

{% block body %}
    <h1>Typelogements list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Designationlogement</th>
                <th>Prixlogement</th>
                <th>Nombreoffrestype</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for typelogement in typelogements %}
            <tr>
                <td><a href="{{ path('typelogement_show', { 'id': typelogement.id }) }}">{{ typelogement.id }}</a></td>
                <td>{{ typelogement.designationLogement }}</td>
                <td>{{ typelogement.prixLogement }}</td>
                <td>{{ typelogement.nombreOffresType }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('typelogement_show', { 'id': typelogement.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('typelogement_edit', { 'id': typelogement.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('typelogement_new') }}">Create a new typelogement</a>
        </li>
    </ul>
{% endblock %}
